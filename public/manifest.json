{
  "name": "Svelte dectector",
  "description": "A browser extension that detects the use of Svelte.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "webNavigation"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": { 
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
